@page "/register"
@using BlocoDeNotas.front.Models
@using BlocoDeNotas.front.Services
@using Microsoft.AspNetCore.Components.Forms
@inject AuthService AuthService
@inject NavigationManager Navigation

<style>
    body {
        background-color: #1e1e2f;
        color: #f0f0f0;
        font-family: 'Segoe UI', sans-serif;
    }

    .register-container {
        max-width: 400px;
        margin: 100px auto;
        padding: 30px;
        background-color: #2c2c3c;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.5);
    }

    .register-container h3 {
        text-align: center;
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        margin-bottom: 15px;
        border: none;
        border-radius: 5px;
        background-color: #3a3a4a;
        color: #f0f0f0;
    }

    .btn-primary {
        width: 100%;
        padding: 12px;
        background-color: #0078d7;
        border: none;
        border-radius: 5px;
        color: white;
        font-weight: bold;
    }

    a {
        color: #00bfff;
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    .text-success {
        color: #4caf50;
        text-align: center;
    }

    .text-danger {
        color: #ff6b6b;
        text-align: center;
    }
</style>

<div class="register-container">
    <h3>Registro</h3>

    <EditForm Model="registerModel" OnValidSubmit="HandleRegister">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <InputText @bind-Value="registerModel.UserName" class="form-control" placeholder="Usuário" />
        <InputText @bind-Value="registerModel.Email" class="form-control" placeholder="Email" />
        <InputText @bind-Value="registerModel.Password" type="password" class="form-control" placeholder="Senha" />
        <InputText @bind-Value="registerModel.ConfirmPassword" type="password" class="form-control" placeholder="Confirmar Senha" />

        <button type="submit" class="btn btn-primary">Registrar</button>

        @if (registroSucesso)
        {
            <p class="text-success">Conta criada com sucesso! Você pode fazer login agora.</p>
        }
        else if (registroFalhou)
        {
            <p class="text-danger">Erro ao registrar. Verifique os dados e tente novamente.</p>
        }

        <p style="text-align:center; margin-top:10px;">
            Já tem conta?
            <a href="/login">Clique aqui para fazer login</a>
        </p>
    </EditForm>
</div>

@code {
    private RegisterModel registerModel = new();
    private bool registroSucesso = false;
    private bool registroFalhou = false;

    private async Task HandleRegister()
    {
        var result = await AuthService.RegisterAsync(registerModel);
        registroSucesso = result;
        registroFalhou = !result;
    }
}